<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/history_background"
    android:layoutDirection="ltr"
    android:orientation="horizontal"
    tools:context="com.final_project.carfix.TreatmentHistoryActivity">

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/history_clicked"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/history_clicked" />

        <ImageView
            android:id="@+id/treatmet_add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/treatmet_add" />

        <ImageView
            android:id="@+id/pencil"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/pencil" />

        <ImageView
            android:id="@+id/future_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/future_icon" />

        <ImageView
            android:id="@+id/edit_exit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/change_time" />

        <ImageView
            android:id="@+id/show_details"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/client_details"/>

        <ImageView
            android:id="@+id/contact"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/contact_us_icon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="rtl"
        android:orientation="vertical"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/title_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/almoni_black"
            android:gravity="center|right"
            android:paddingTop="20dp"
            android:text="היסטוריית\n טיפולים"
            android:textColor="@color/background_light_screen"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/car_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/almoni_light"
            android:gravity="center|right"
            android:paddingTop="20dp"
            android:text="רכב"
            android:textColor="@color/background_light_screen"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/car_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/almoni_regular"
            android:gravity="center|right"
            android:textColor="@color/background_light_screen"
            android:text="h"
            android:textSize="28dp" />

        <ListView
            android:id="@+id/listTreatments"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:fontFamily="@font/almoni_regular"
            android:textColor="@color/background_light_screen"
            android:paddingLeft="30dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp" />

    </LinearLayout>

</RelativeLayout>
