<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/future_bg"
    android:gravity="center|top"
    android:layoutDirection="ltr"
    android:orientation="horizontal"
    tools:context=".FutureArrivalActivity">

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/history"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/history_tr"
            tools:ignore="RtlHardcoded" />

        <ImageView
            android:id="@+id/future_func"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/future_clicked"
            tools:ignore="RtlHardcoded" />

        <ImageView
            android:id="@+id/show_details"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/client_details"/>

        <ImageView
            android:id="@+id/contact"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/contact_us_icon"
            tools:ignore="RtlHardcoded" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_future"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/almoni_black"
            android:paddingTop="20dp"
            android:textColor="@color/background_light_screen"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginRight="25sp"
            android:text="הטיפול\nהבא"/>

        <TextView
            android:id="@+id/textViewdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/almoni_black"
            android:text="בחר יום"
            android:textColor="@color/background_light_screen"
            android:layout_marginRight="25sp"
            android:textSize="22sp" />

        <Spinner
            android:id="@+id/spinner_date"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:background="@drawable/spinner_border"
            android:layout_marginRight="25sp"
            android:scrollbarSize="20sp" />

        <TextView
            android:id="@+id/text_view_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25sp"
            android:fontFamily="@font/almoni_black"
            android:gravity="right"
            android:text="בחר שעת הגעה"
            android:layout_marginRight="25sp"
            android:textColor="@color/background_light_screen"
            android:textSize="22dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/hours_enter"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textColor="@color/background_light_screen"
                android:ems="10"
                android:gravity="center"
                android:fontFamily="@font/almoni_regular"
                android:inputType="time" />

            <TextView
                android:id="@+id/dots"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/background_light_screen"
                android:fontFamily="@font/almoni_bold"
                android:text=":"
                android:textSize="30dp" />

            <EditText
                android:id="@+id/minutes_enter"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:ems="10"
                android:gravity="center"
                android:fontFamily="@font/almoni_regular"
                android:textColor="@color/background_light_screen"
                android:inputType="time" />


        </LinearLayout>

        <TextView
            android:id="@+id/treatment_kind"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="25sp"
            android:fontFamily="@font/almoni_black"
            android:text="סוג טיפול"
            android:textColor="@color/background_light_screen"
            android:layout_marginRight="25sp"
            android:textSize="22dp" />

        <Spinner
            android:id="@+id/treatment_kind_spinner"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:background="@drawable/spinner_border"
            android:layout_marginRight="25sp"
            android:scrollbarSize="20sp" />

        <Button
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/button"
            android:fontFamily="@font/almoni_regular"
            android:text="בדוק"
            android:textStyle="bold"
            android:layout_marginRight="25sp"
            android:textColor="@color/colorWhite" />

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:background="@color/colorWhite"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/text_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="זמן יציאה משוער"
                android:fontFamily="@font/almoni_bold"
                android:textColor="@color/background_light_screen"
                android:layout_gravity="center"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/exit_future_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textDirection="rtl"
                android:layout_gravity="center"
                android:fontFamily="@font/almoni_bold"
                android:textColor="@color/background_light_screen"
                android:textSize="20dp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>