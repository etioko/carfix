<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_page_background"
    android:orientation="vertical"
    tools:context=".LoginActivity">


    <LinearLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/email"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="400dp"
            android:background="@drawable/button"
            android:drawableRight="@drawable/email_image"
            android:drawablePadding="7dp"
            android:ems="10"
            android:fontFamily="@font/almoni_regular"
            android:gravity="right"
            android:hint="אימייל"
            android:inputType="textEmailAddress"
            android:paddingRight="7dp"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <EditText
                android:id="@+id/password"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/button"
                android:drawableRight="@drawable/password_image"
                android:drawablePadding="7dp"
                android:ems="10"
                android:fontFamily="@font/almoni_regular"
                android:gravity="right"
                android:hint="סיסמא"
                android:inputType="textPassword"
                android:paddingRight="7dp"
                android:textColorHint="@color/colorWhite" />

            <ImageView
                android:id="@+id/eye"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignLeft="@+id/password"
                android:layout_marginTop="20dp"
                android:src="@mipmap/eye" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center">

            <CheckBox
                android:id="@+id/remember"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/almoni_regular"
                android:buttonTint="@color/colorWhite"
                android:text="זכור אותי"
                android:layout_marginRight="40dp"
                android:textColor="@color/colorWhite"
                android:textSize="15dp" />
        </LinearLayout>


        <TextView
            android:id="@+id/forgot_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="שכחתי סיסמא"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/almoni_regular"
            android:textSize="15dp" />

        <Button
            android:id="@+id/login"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/backgroundsignin"
            android:text="כניסה"
            android:textColor="@color/background"
            android:fontFamily="@font/almoni_regular"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>