<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bill_background"
    android:orientation="vertical"
    tools:context=".BillActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="העלאת חשבונית לקוח"
        android:fontFamily="@font/almoni_black"
        android:textColor="@color/background_light_screen"
        android:textSize="30sp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:layout_marginLeft="15dp"/>

    <Button
        android:id="@+id/caputre"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/button"
        android:fontFamily="@font/almoni_bold"
        android:textSize="18dp"
        android:text="בחר קובץ להעלאה" />

    <ImageView
        android:id="@+id/pic"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/upload"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/background_light_screen"
        android:background="@drawable/backgroundsignin"
        android:fontFamily="@font/almoni_bold"
        android:textSize="18dp"
        android:text="העלה חשבונית" />

</LinearLayout>

