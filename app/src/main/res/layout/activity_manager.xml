<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/manager_background"
    android:orientation="vertical"
    tools:context="com.final_project.carfix.ManagerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:gravity="center">

            <EditText
                android:id="@+id/carNum"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:background="@drawable/button"
                android:drawableRight="@drawable/car_number"
                android:drawablePadding="15dp"
                android:ems="10"
                android:fontFamily="@font/almoni_regular"
                android:hint="מספר רכב"
                android:inputType="number"
                android:paddingRight="17dp"
                android:textColorHint="@color/colorWhite"
                android:textSize="22dp" />

            <ImageView
                android:id="@+id/next"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignLeft="@+id/carNum"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/check_car" />


        </RelativeLayout>

        <Button
            android:id="@+id/new_user"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button"
            android:drawableRight="@mipmap/plus"
            android:fontFamily="@font/almoni_regular"
            android:gravity="right"
            android:text="משתמש חדש"
            android:textColor="@color/colorWhite"
            android:textSize="22dp" />

        <Button
            android:id="@+id/status"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button"
            android:drawableRight="@mipmap/status"
            android:fontFamily="@font/almoni_regular"
            android:gravity="right"
            android:text="טיפולים פעילים"
            android:textColor="@color/colorWhite"
            android:textSize="22dp" />


    </LinearLayout>

</LinearLayout>
