<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layoutDirection="ltr"
    android:background="@drawable/contact_us"
    tools:context=".ContactActivity">

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/history"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/history_tr"
            tools:ignore="RtlHardcoded" />

        <ImageView
            android:id="@+id/future_func"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/future_icon"
            tools:ignore="RtlHardcoded" />

        <ImageView
            android:id="@+id/show_details"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/client_details"/>

        <ImageView
            android:id="@+id/contact"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/contact_us_icon_clicked"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="צור קשר"
            android:paddingTop="30dp"
            android:textColor="@color/background_light_screen"
            android:fontFamily="@font/almoni_black"
            android:paddingRight="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="מרכז שירות הבירה"
            android:textColor="@color/background_light_screen"
            android:textStyle="bold"
            android:fontFamily="@font/almoni_bold"
            android:paddingTop="35sp"
            android:paddingRight="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="מוסך מורשה לרכבי מאזדה ופורד"
            android:textColor="@color/background_light_screen"
            android:fontFamily="@font/almoni_regular"
            android:paddingRight="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="טלפון: 07-2396950"
            android:textColor="@color/background_light_screen"
            android:paddingTop="25sp"
            android:fontFamily="@font/almoni_regular"
            android:paddingRight="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="פקס: 02-6793396"
            android:textColor="@color/background_light_screen"
            android:fontFamily="@font/almoni_regular"
            android:paddingRight="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="כתובת: צרת 7, א.ת תלפיות, ירושלים"
            android:textColor="@color/background_light_screen"
            android:fontFamily="@font/almoni_regular"
            android:paddingRight="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="מייל: Habiranet@gmail.com"
            android:textColor="@color/background_light_screen"
            android:fontFamily="@font/almoni_regular"
            android:paddingRight="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="אתר: www.abira.co.il"
            android:textDirection="rtl"
            android:textColor="@color/background_light_screen"
            android:fontFamily="@font/almoni_regular"
            android:paddingRight="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="שעות פתיחה \nראשון-חמישי, 7:30-16:30\nשישי 7:30-12:00"
            android:textColor="@color/background_light_screen"
            android:fontFamily="@font/almoni_regular"
            android:paddingTop="15dp"
            android:paddingRight="20dp" />

    </LinearLayout>
</LinearLayout>